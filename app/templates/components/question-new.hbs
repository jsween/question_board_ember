{{#if showNewQuestionForm}}
  <h2>Ask Your Question</h2>
  <form>
    <div class="form-group">
      <label for="question">Question: </label>
      {{input value=question id="question"}}
    </div>
    <div class="form-group">
      <label for="author">Asked By: </label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="author_avatar">Your Avatar URL: </label>
      {{input value=author_avatar id="author_avatar"}}
    </div>
    <div class="form-group">
      <label for="notes">Additional Info: </label>
      {{textarea value=notes id="notes"}}
    </div>
    <div class="form-group">
      <label for="image">Image URL: </label>
      {{input value=image id="image"}}
    </div>
    <button {{action 'save'}}>Ask!</button>
    <button {{action 'hideNewQuestionForm'}}>Cancel</button>
  </form>
{{else}}
  <button {{action 'showNewQuestionForm'}}>Ask a Question</button>
{{/if}}
