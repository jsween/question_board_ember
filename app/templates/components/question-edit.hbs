{{#if showEditForm}}
  <h2>Edit the Question</h2>
  <form>
    <div class="form-group">
      <label for="question">Question: </label>
      {{input value=question.question id="question" placeholder=question.question}}
    </div>
    <div class="form-group">
      <label for="author">Author: </label>
      {{input value=question.author id="author" placeholder=question.author}}
    </div>
    <div class="form-group">
      <label for="author_avatar">Your Avatar URL: </label>
      {{input value=question.author_avatar id="author_avatar" placeholder=question.author_avatar}}
    </div>
    <div class="form-group">
      <label for="notes">Notes: </label>
      {{input value=question.notes id="notes" placeholder=question.notes}}
    </div>
    <div class="form-group">
      <label for="image">Image URL: </label>
      {{input value=question.image id="image" placeholder=question.image}}
    </div>
    <button class="btn btn-success" {{action 'save' question}}>Save</button>
    <button class="btn btn-warning" {{action 'hideEditForm'}}>Cancel</button>
  </form>
{{else}}
  <button class="btn-info" {{action 'showEditForm'}}>Edit</button>
  <button class="btn-danger" {{action 'deleteQuestion' question}}>Delete</button>
{{/if}}
