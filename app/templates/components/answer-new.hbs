{{#if showAnswerForm}}
  <h2>Answer the Question</h2>
  <form>
    <div class="form-group">
      <label for="answer">answer: </label>
      {{textarea value=answer id="answer"}}
    </div>
    <div class="form-group">
      <label for="answer_author">Answered By: </label>
      {{input value=answer_author id="answer_author"}}
    </div>
    <button {{action 'save' question}}>Answer!</button>
    <button {{action 'hideAnswerForm'}}>Cancel</button>
  </form>
{{else}}
    <button {{action 'showAnswerForm'}}>Give an Answer</button>
{{/if}}
