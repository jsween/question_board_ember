{{#if showAnswerForm}}
  <h2>Answer the Question</h2>
  <form>
    <div class="form-group">
      <label for="answer">answer: </label>
      {{textarea value=answer id="answer"}}
    </div>
    <div class="form-group">
      <label for="answer_author">Answered By: </label>
      {{input value=answer_author id="answer_author"}}
    </div>
    <div class="form-group">
      <label for="answer_author_avatar">Your Avatar URL: </label>
      {{input value=answer_author_avatar id="answer_author_avatar"}}
    </div>
    <button class="btn btn-success" {{action 'save' question}}>Answer!</button>
    <button class="btn btn-warning"{{action 'hideAnswerForm'}}>Cancel</button>
  </form>
{{else}}
    <button class="btn-lg btn-primary" {{action 'showAnswerForm'}}>Give an Answer</button>
{{/if}}
